<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.myapplication.scrolllayout.ProvideScrollStateScrollView
        android:id="@+id/psssv_srcoll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/iv_scroll_bar"
        android:overScrollMode="never"
        android:scrollbars="none"></com.example.myapplication.scrolllayout.ProvideScrollStateScrollView>

    <ImageView
        android:id="@+id/iv_scroll_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />
</RelativeLayout>